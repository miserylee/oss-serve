{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016"],
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "mocha"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
